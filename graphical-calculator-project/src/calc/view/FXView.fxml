<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" style="-fx-background-color: #e0ecff;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calc.view.GuiView">
   <children>
      <HBox alignment="CENTER">
         <children>
            <RadioButton fx:id="rbInfix" mnemonicParsing="false" selected="true" text="Infix">
               <toggleGroup>
                  <ToggleGroup fx:id="exprType" />
               </toggleGroup>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="rbPostfix" mnemonicParsing="false" text="Reverse Polish" toggleGroup="$exprType">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </RadioButton>
         </children>
         <opaqueInsets>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
      <TextField fx:id="txtInput" maxWidth="-Infinity" prefWidth="500.0" promptText="Enter an expression...">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <Button fx:id="btnCalculate" minWidth="200.0" mnemonicParsing="false" text="Calculate" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="lblAnswer" alignment="CENTER" text="Answer:" textAlignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </Label>
   </children>
   <opaqueInsets>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
